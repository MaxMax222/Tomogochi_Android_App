<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme without Action Bar -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWarning</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- TextView Style -->
    <style name="CustomTextViewStyle">
        <item name="android:textColor">@color/ash_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- EditText Style -->
    <style name="CustomEditTextStyle">
        <item name="android:backgroundTint">@color/cinnabar</item>
        <item name="android:textColor">@color/ash_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Spinner Style -->
    <style name="CustomSpinnerStyle">
        <item name="android:backgroundTint">@color/colorSuccess</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:popupBackground">@color/colorBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
