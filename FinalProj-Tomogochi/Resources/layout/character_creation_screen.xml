<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <!-- ImageView to display the avatar -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/avatar_imgView"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <!-- Character Label and Spinner -->
        <TextView
            android:id="@+id/label_Character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character"
            android:textSize="13dp"/>
        <Spinner
            android:id="@+id/spinner_Characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    
    <!-- Horizontal LinearLayout for Spinners with Labels -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Hair Color Label and Spinner -->
        <TextView
            android:id="@+id/label_hairColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hair Color"
            android:textSize="13dp"/>
        <Spinner
            android:id="@+id/spinner_hairColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Body Color Label and Spinner -->
        <TextView
            android:id="@+id/label_skinColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Color"
            android:textSize="13dp"
            />
        <Spinner
            android:id="@+id/spinner_skinColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>
