<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    >
    <EditText
        android:id="@+id/fullName_edittxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/Fname"
        android:layout_margin="8dp"
        android:inputType="text"/>
      <EditText
        android:id="@+id/username_edittxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/username"
        android:layout_margin="8dp"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/email"
         android:layout_margin="8dp"
        android:id="@+id/email_edittxt"
        android:inputType="textEmailAddress"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/pass"
        android:layout_margin="8dp"
        android:id="@+id/password_edittxt"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/conf_pass"
        android:layout_margin="8dp"
        android:id="@+id/confirm_password_edittxt"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/register_btn"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="@string/register"
        android:layout_margin="8dp"
        app:cornerRadius="16dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"/>

     <Button
        android:id="@+id/cencel_btn"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="@string/cencel"
        android:layout_margin="8dp"
        app:cornerRadius="16dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"/>
</LinearLayout>

