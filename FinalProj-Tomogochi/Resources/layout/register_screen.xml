<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    >
    <EditText
        android:id="@+id/fullName_edittxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/Fname"
        android:inputType="text"
        style="@style/CustomEditTextStyle"/>
      <EditText
        android:id="@+id/username_edittxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/username"
        style="@style/CustomEditTextStyle"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/email"
        style="@style/CustomEditTextStyle"
        android:id="@+id/email_edittxt"
        android:inputType="textEmailAddress"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/pass"
        style="@style/CustomEditTextStyle"
        android:id="@+id/password_edittxt"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/conf_pass"
        style="@style/CustomEditTextStyle"
        android:id="@+id/confirm_password_edittxt"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/register_btn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        app:cornerRadius="16dp"
        style="@style/CustomButtonStyle"/>

     <Button
        android:id="@+id/cencel_btn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="@string/cencel"
        app:cornerRadius="16dp"
         style="@style/CustomButtonStyle"/>
</LinearLayout>

